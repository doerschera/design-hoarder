
<!-- articles -->
<section>
  <div class="row">
    <div class="col s10 m6 l11 offset-s1 offset-m3 offset-l1">
      {{#each articles}}
      <div class="article-item col s12 l4 offset-l1">
        <div class="article-wrapper" data-article-id="{{_id}}">
          <div class="article-img">
            <img src="{{img}}" alt="{{title}}">
          </div>
          <div class="col s12 article-title">
            <h3 class="truncate">{{title}}</h3>
            <p>{{source}}<i class="material-icons">favorite_border</i></p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

<!-- sign in modal -->
<div class="sign-in-modal">
  <div class="row">
    <i class="material-icons">clear</i>
  </div>
  <div class="row">
    <h6>Sign in or sign up to save your favorite articles and add comments!</h6>
  </div>
  <div class="row">
    <div class="input-field">
      <input id="email" type="text">
      <label for="email">Email</label>
    </div>
  </div>
  <div class="row">
    <div class="input-field">
      <input id="password" type="password">
      <label for="password">Password</label>
    </div>
  </div>
  <div class="row">
    <button type="button" class="btn" id="sign-in">Sign In</button>
    <button type="button" class="btn" id="sign-up">Sign Up</button>
  </div>
  <p class="error-message"></p>
</div>

